<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailsFragment">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/recipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/recipe_picture"
                android:layout_width="315dp"
                android:layout_height="315dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginVertical="5dp"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/testingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Ingredients"
                android:textSize="20dp"/>

            <ExpandableListView
                android:id="@+id/ingredientsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"

                tools:listitem="@layout/ingredient_item" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:text="Preparation steps"
                android:textSize="20dp"/>

            <ExpandableListView
                android:id="@+id/preparationStepsListView"
                android:layout_width="match_parent"
                android:layout_height="293dp"
                android:layout_marginTop="10dip"
                tools:listitem="@layout/step_item"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

